<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startActivity">

    <Button
        android:id="@+id/playBotButton"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginTop="241dp"
        android:layout_marginBottom="55dp"
        android:text="Play With Bot"
        app:layout_constraintBottom_toTopOf="@+id/playFriendButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:background="@drawable/startButtonDesign"
        />

    <Button
        android:id="@+id/playFriendButton"
        android:layout_width="208dp"
        android:layout_height="0dp"
        android:layout_marginBottom="273dp"
        android:textSize="20sp"
        android:background="@drawable/startButtonDesign"
        android:textColor="@color/white"
        android:text="Play With Friend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playBotButton" />
</androidx.constraintlayout.widget.ConstraintLayout>